{
  "preset": "react-native",
  "setupFilesAfterEnv": ["<rootDir>/src/__tests__/setup.ts"],
  "transformIgnorePatterns": [
    "node_modules/(?!(jest-)?react-native|@react-native|@umituz)"
  ],
  "testMatch": [
    "**/__tests__/**/*.(test|spec).(ts|tsx|js)",
    "**/*.(test|spec).(ts|tsx|js)"
  ],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts",
    "!src/**/__tests__/**",
    "!src/index.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}